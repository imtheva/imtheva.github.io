<div class="repo p-2" style="flex: 1 1 320px; max-width: 520px;">
  <div class="card h-100 shadow-sm text-center">
    <div class="card-body">

      <!-- Avatar -->
      <img
        src="https://avatars.githubusercontent.com/{{ include.username }}"
        alt="{{ include.username }} avatar"
        class="rounded-circle mb-3"
        style="width: 96px; height: 96px; object-fit: cover;"
        loading="lazy"
      >

      <!-- Username -->
      <h5 class="card-title mb-1">
        <a href="https://github.com/{{ include.username }}" target="_blank" rel="noopener">
          @{{ include.username }}
        </a>
      </h5>

      <p class="card-text text-muted mb-3">
        GitHub profile
      </p>

      <a
        class="btn btn-sm btn-outline-primary"
        href="https://github.com/{{ include.username }}"
        target="_blank"
        rel="noopener"
      >
        Open Profile
      </a>

    </div>
  </div>
</div>
